<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0FFEB"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/welcome_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:text="Welcome Back Doctor"
            android:textColor="#FF7DA9"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/docName_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor's name"
            android:layout_gravity="center"
            android:textColor="#3FBEAB"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/oldPatientButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="80dp"
        android:background="@drawable/rounded_button"
        android:text="Old Patient"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/newPatientButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/oldPatientButton"

        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:background="@drawable/rounded_button"
        android:text="New Patient"
        android:textColor="#FFFFFF" />
    <Button
        android:id="@+id/signOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_button"
        android:text="Sign out"
        android:textColor="#FFFFFF" />


</RelativeLayout>